require("roslua")

roslua.init_node{master_uri=os.getenv("ROS_MASTER_URI"),
		 node_name="/nodemon_lua_example_publisher"}

require("nodemon")


local node_state = nodemon.NodeStatePublisher:new()
node_state:set_running()

roslua.run(10)
